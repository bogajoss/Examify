# TEMPORARY: Allow all access for testing
Require all granted

# CORS Headers
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Origin, Accept"
Header always set Access-Control-Allow-Credentials "true"

# Handle preflight OPTIONS
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L,E=ACCESS_CONTROL:1]
Header always set Access-Control-Max-Age "86400" env=ACCESS_CONTROL

# Disable ModSecurity completely for this directory
<IfModule mod_security.c>
    SecRuleEngine Off
    SecFilterScanPOST Off
</IfModule>

# Increase limits for large requests
LimitRequestBody 104857600  # 100MB